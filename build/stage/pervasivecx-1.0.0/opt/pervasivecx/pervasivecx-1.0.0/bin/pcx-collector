#!/usr/bin/env bash
set -euo pipefail
LOG_FILE="/pervasiveCX_mnt/logs/core/pervasiveCX-collector.log"
mkdir -p "$(dirname "$LOG_FILE")"
echo "$(date) - starting DUMMY pervasiveCX collector (no real collector yet)" >> "$LOG_FILE"
while true; do
  echo "$(date) - collector heartbeat" >> "$LOG_FILE"
  sleep 90
done
